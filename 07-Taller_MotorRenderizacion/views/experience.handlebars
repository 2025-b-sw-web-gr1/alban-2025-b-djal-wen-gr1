{{!-- Vista: Experiencia --}}

<section class="page-header">
    <div class="container">
        <h1 class="page-title">Experiencia</h1>
        <p class="page-description">Mi trayectoria profesional y educativa</p>
    </div>
</section>

<section class="experience-section">
    <div class="container">
        
        {{!-- Experiencia Laboral --}}
        <div class="timeline-section">
            <h2 class="section-title">
                <i class="fas fa-briefcase"></i>
                Experiencia Laboral
            </h2>
            
            <div class="timeline">
                {{#each experience}}
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <span class="timeline-period">{{period}}</span>
                        <h3 class="timeline-title">{{position}}</h3>
                        <h4 class="timeline-company">{{company}}</h4>
                        <p class="timeline-description">{{description}}</p>
                        
                        {{#if achievements}}
                        <ul class="achievements-list">
                            {{#each achievements}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        
        {{!-- Educación --}}
        <div class="timeline-section">
            <h2 class="section-title">
                <i class="fas fa-graduation-cap"></i>
                Educación
            </h2>
            
            <div class="timeline">
                {{#each education}}
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <span class="timeline-period">{{period}}</span>
                        <h3 class="timeline-title">{{degree}}</h3>
                        <h4 class="timeline-company">{{institution}}</h4>
                        <p class="timeline-description">{{description}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        
        {{!-- Testimonios --}}
        <div class="testimonials-section">
            <h2 class="section-title">
                <i class="fas fa-quote-left"></i>
                Testimonios
            </h2>
            
            <div class="testimonials-grid">
                {{#each testimonials}}
                <div class="testimonial-card">
                    <div class="testimonial-rating">
                        {{stars rating}}
                    </div>
                    <p class="testimonial-text">"{{text}}"</p>
                    <div class="testimonial-author">
                        <img src="{{avatar}}" alt="{{name}}" onerror="this.src='/images/avatar-placeholder.jpg'">
                        <div class="author-info">
                            <h4>{{name}}</h4>
                            <p>{{position}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        
    </div>
</section>